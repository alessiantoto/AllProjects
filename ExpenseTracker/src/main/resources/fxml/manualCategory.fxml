<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox alignment="CENTER" spacing="20" styleClass="root-pane, content-container"
  xmlns="http://javafx.com/javafx/21"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.esi.prj.view.ManualCategoryController">
  <padding>
    <Insets bottom="20" left="20" right="20" top="20" />
  </padding>

  <ImageView fx:id="itemImageView" fitWidth="400" fitHeight="400" preserveRatio="true"
    styleClass="image-view-container">
    <image>
    </image>
  </ImageView>

  <Label text="Sélectionnez un paramètre et validez :" styleClass="subtitle-label" />

  <HBox alignment="CENTER" spacing="10">
    <ComboBox fx:id="parameterComboBox" promptText="Choisissez un paramètre" prefWidth="200"
      styleClass="combo-box" />
    <Button fx:id="validateButton" text="Valider" onAction="#handleValidateButtonAction"
      styleClass="primary-button" />
  </HBox>
</VBox>
