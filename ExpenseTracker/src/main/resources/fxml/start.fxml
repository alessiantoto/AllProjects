<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="Infinity" prefWidth="Infinity" spacing="25"
  styleClass="content-container"
  xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="be.esi.prj.view.StartViewController">
  <padding>
    <Insets bottom="40" left="40" right="40" top="40" />
  </padding>

  <Label alignment="CENTER" styleClass="title-label"
    text="Bienvenue sur l'application Expense Tracker."
    textAlignment="CENTER" wrapText="true" maxWidth="Infinity" />

  <Label alignment="CENTER" styleClass="subtitle-label"
    text="Veuillez sélectionner un utilisateur, entrer votre salaire et choisir le dossier des tickets."
    textAlignment="CENTER" wrapText="true" maxWidth="Infinity" />

  <GridPane alignment="CENTER" hgap="20" vgap="20" maxWidth="Infinity" VBox.vgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="150" />
      <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>

    <Label styleClass="input-label" text="Chemin du dossier :" GridPane.columnIndex="0"
      GridPane.rowIndex="1" />
    <HBox alignment="CENTER_LEFT" spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="1"
      maxWidth="Infinity">
      <TextField fx:id="pathField" maxWidth="Infinity" promptText="Sélectionnez un dossier"
        styleClass="text-input"
        HBox.hgrow="ALWAYS" />
      <Button fx:id="browseButton" onAction="#browseFolder" styleClass="button" text="Parcourir..." />
    </HBox>
  </GridPane>

  <Label fx:id="messageLabel" alignment="CENTER" managed="false" styleClass="subtitle-label"
    textAlignment="CENTER" textFill="red" visible="false" wrapText="true" maxWidth="Infinity">
    <VBox.margin>
      <Insets top="15" />
    </VBox.margin>
  </Label>

  <Label alignment="CENTER" styleClass="title-label" text="Utilisateurs Enregistrés"
    textAlignment="CENTER" maxWidth="Infinity">
    <VBox.margin>
      <Insets top="20" />
    </VBox.margin>
  </Label>

  <ListView fx:id="userListView" maxHeight="200" prefHeight="150" maxWidth="Infinity"
    VBox.vgrow="ALWAYS" />

  <HBox alignment="CENTER" spacing="15" maxWidth="Infinity">
    <Label styleClass="input-label" text="Nouveau nom :" />
    <TextField fx:id="newUserField" promptText="Nouveau nom d'utilisateur" styleClass="text-input"
      HBox.hgrow="ALWAYS" maxWidth="Infinity" />
    <Label styleClass="input-label" text="Salaire :" />
    <TextField fx:id="newUserSalaryField" prefWidth="100" promptText="Salaire"
      styleClass="text-input" />
    <Button fx:id="addNewUserButton" onAction="#handleAddNewUserButtonAction" styleClass="button"
      text="Ajouter" />
  </HBox>

  <HBox alignment="CENTER" spacing="15" maxWidth="Infinity">
    <Button fx:id="startButton" onAction="#handleStartButtonAction" styleClass="primary-button"
      text="Start">
      <VBox.margin>
        <Insets top="20" />
      </VBox.margin>
    </Button>
    <Button fx:id="resultButton" onAction="#handleResultButtonAction" styleClass="button"
      text="Afficher les dépenses">
      <VBox.margin>
        <Insets top="20" />
      </VBox.margin>
    </Button>
  </HBox>
</VBox>
