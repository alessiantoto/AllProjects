<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<VBox spacing="25" alignment="TOP_CENTER" prefHeight="Infinity" prefWidth="Infinity"
  styleClass="content-container"
  xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="be.esi.prj.view.ResultViewController">
  <padding>
    <Insets bottom="40" left="40" right="40" top="40" />
  </padding>

  <Label text="Dépenses" styleClass="title-label" alignment="CENTER" textAlignment="CENTER"
    wrapText="true"
    maxWidth="Infinity" />

  <BarChart fx:id="barChart" title="Dépenses par catégorie" animated="false" legendVisible="false"
    styleClass="bar-chart" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS">
    <xAxis>
      <CategoryAxis side="BOTTOM" />
    </xAxis>
    <yAxis>
      <NumberAxis side="LEFT" />
    </yAxis>
  </BarChart>

  <VBox fx:id="salaryExpenseContainer" spacing="10" alignment="TOP_LEFT"
    styleClass="content-container"
    maxWidth="Infinity">
    <padding>
      <Insets top="15" bottom="15" left="15" right="15" />
    </padding>
  </VBox>

  <Region VBox.vgrow="ALWAYS" />

  <HBox alignment="CENTER_LEFT" spacing="15" styleClass="content-container" maxWidth="Infinity">
    <padding>
      <Insets top="15" bottom="15" left="15" right="15" />
    </padding>
    <Label text="Total des dépenses :" styleClass="total-label" />
    <Label fx:id="totalLabel" styleClass="total-label" wrapText="true" />
    <Label text="Restant :" styleClass="total-label" />
    <Label fx:id="restant" styleClass="total-label" wrapText="true" />
  </HBox>

  <Button fx:id="addButton" onAction="#handleStartButtonAction" styleClass="button"
    text="Ajouter des tickets" VBox.vgrow="NEVER">
    <VBox.margin>
      <Insets top="20" />
    </VBox.margin>
  </Button>
</VBox>
